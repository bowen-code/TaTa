<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="#0099cc"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="18dp"
            android:layout_weight="5.5"
            android:background="@drawable/editview2"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="7dp"
            android:hint="搜索目的地"
            android:padding="6dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_holo_light"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" />


        <ListView
            android:id="@+id/rentCarList"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10.5"
            android:cacheColorHint="#00000000"
            android:divider="#FAdAFA"
            android:dividerHeight="1dp"
            android:scrollbars="none"
            android:listSelector="@drawable/listview" >
        </ListView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FAdAFA" />

</LinearLayout>