<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/username"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/mail"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="用户名"
                android:maxLength="20"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#75AFBE"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#75AFBE" />

            <EditText
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="密码"
                android:inputType="numberPassword"
                android:maxLength="15"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#75AFBE"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#75AFBE" />

            <EditText
                android:id="@+id/confirmPwd"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="确认密码"
                android:inputType="numberPassword"
                android:maxLength="15"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#75AFBE"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#75AFBE" />

            <EditText
                android:id="@+id/regist_phone_et"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/telephonenumber"
                android:drawablePadding="8dp"
                android:ems="11"
                android:hint="手机号码"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#75AFBE"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#75AFBE" />

            <LinearLayout
                android:id="@+id/regist_checknumber_rl"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/regist_checknumber_et"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/yzm"
                    android:ems="10"
                    android:hint="手机验证码"
                    android:inputType="phone"
                    android:maxLength="6"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#75AFBE"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/regist_getchecknumber_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/textview"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="验证码将发送到您的手机，请注意查收"
                android:textColor="#75AFBE" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/regist_next_btn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:background="@drawable/logintextview"
        android:text="注册"
        android:textColor="#ffffff" />

</LinearLayout>