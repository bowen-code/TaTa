<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.tata"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10.64"
        android:fillViewport="true"
         >
           <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
        
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:background="@drawable/person_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <com.tata.view.CircleImageView
            android:id="@+id/figure"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/face"
            app:border_color="@color/gray"
            app:border_width="1dp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="踏踏旅游"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="#6AA7D3" />

    <com.tata.view.MyListView
        android:id="@+id/shareList"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:listSelector="@drawable/listview"
        android:dividerHeight="8dp"
        android:divider="@color/white"
        android:scrollbars="none" >
    </com.tata.view.MyListView>
    </LinearLayout>
</ScrollView>
</LinearLayout>