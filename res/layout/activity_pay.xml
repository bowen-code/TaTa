<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3E3"
    android:orientation="vertical" >

     <LinearLayout android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="@color/white"
             android:paddingLeft="10dp"
             android:paddingTop="4dp"
             android:paddingBottom="4dp"
             android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="订单号："/>
            <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reserveNumber"
             android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:text="852258"/>
            
    </LinearLayout>
     <View android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_holo_dark"/>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
         android:background="@color/white"
        android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品编号："
             android:textSize="16sp"
            android:layout_marginBottom="3dp"
            android:id="@+id/productID"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="票数："
             android:textSize="16sp"
            android:id="@+id/ticketNum"/>
         <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="16sp"
            android:text="总额："/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="16sp"
            android:text="￥180"
            android:layout_marginLeft="5dp"
            android:textColor="#4FBAE0"
            android:id="@+id/price"/>
         </LinearLayout>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="16sp"
            android:text="游玩日期：2015-08-28"
            android:id="@+id/title"/>
        
    </LinearLayout>
    
    <View android:layout_width="fill_parent"
        android:layout_height="10dp"/>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:orientation="vertical">
        <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="5dp"
        android:id="@+id/zfb"
        android:layout_weight="1">
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zfbpic"
                 android:layout_centerVertical="true"
                android:src="@drawable/zfb"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                  android:layout_marginLeft="5dp"
                 android:layout_centerVertical="true"
                android:layout_toRightOf="@id/zfbpic"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                   android:layout_marginRight="5dp"
                   android:id="@+id/zfbImg"
                android:src="@drawable/checkbox_checked"/>
        </RelativeLayout>
        <View android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_holo_light"/>
        <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:id="@+id/wx"
        android:padding="5dp"
        android:layout_weight="1">
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weixin"
                 android:layout_centerVertical="true"
                android:src="@drawable/weixin"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                  android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/weixin"
                 android:layout_centerVertical="true"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:id="@+id/wxImg"
                android:src="@drawable/checkbox_uncheck"/>
        </RelativeLayout>
        <View android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_holo_light"/>
        <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="5dp"
        android:id="@+id/bd"
        android:layout_weight="1">
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/baidu"
                 android:layout_centerVertical="true"
                android:src="@drawable/zfb"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="百度钱包支付"
                  android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/baidu"
                 android:layout_centerVertical="true"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                   android:layout_marginRight="5dp"
                 android:layout_centerVertical="true"
                 android:id="@+id/bdImg"
                android:src="@drawable/checkbox_uncheck"/>
        </RelativeLayout>
        <View android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_holo_light"/>
        <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="5dp"
        android:id="@+id/jsyh"
        android:layout_weight="1">
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/js"
                 android:layout_centerVertical="true"
                android:src="@drawable/weixin"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银联支付"
                  android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/js"
                 android:layout_centerVertical="true"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:id="@+id/jsImg"
                android:src="@drawable/checkbox_uncheck"/>
        </RelativeLayout>
        <View android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_holo_light"/>
        <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="5dp"
        android:id="@+id/jdpay_wap"
        android:layout_weight="1">
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                android:id="@+id/cft"
                android:src="@drawable/zfb"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="京东支付"
                android:layout_marginLeft="5dp"
                 android:layout_centerVertical="true"
                android:layout_toRightOf="@id/cft"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                 android:layout_marginRight="5dp"
                 android:layout_centerVertical="true"
                 android:id="@+id/cftImg"
                android:src="@drawable/checkbox_uncheck"/>
        </RelativeLayout>
    </LinearLayout>
    
    
    
     <View android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"/>
    
     <LinearLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_weight="2">
            <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应付总额："
            android:textColor="#5EC0E3"
            android:layout_marginLeft="6dp"
            android:gravity="center"
            android:textSize="16sp"/>
            <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:gravity="center"
            android:id="@+id/payMoney"
            android:text="￥180"
            android:layout_marginLeft="4dp"
            android:textSize="16sp"/>
            
        </LinearLayout>
        <TextView android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="确认支付"
            android:background="#47B7DF"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/pay"
            android:layout_weight="1"/>
    </LinearLayout>
    
</LinearLayout>