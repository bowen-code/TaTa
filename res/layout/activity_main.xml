<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/fragmentPager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="11" >
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:background="@color/white" >

     <LinearLayout android:layout_width="0dp"
         android:layout_weight="1"
         android:clickable="true"
         android:id="@+id/TravelLayout"
         android:layout_gravity="center"
         android:gravity="center"
         android:layout_height="fill_parent"
         android:orientation="vertical">
         <ImageView android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/travelPic"
             android:gravity="center_horizontal"
             android:background="@drawable/tata"
             />
     <TextView android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center"
           android:id="@+id/travel"
             android:textSize="12sp"
            android:textColor="@color/blue"
         android:text="旅游"/>
         </LinearLayout>
         <LinearLayout android:layout_width="0dp"
         android:layout_weight="1"
             android:id="@+id/ShareLayout"
           android:clickable="true"
         android:gravity="center"
         android:layout_height="fill_parent"
         android:orientation="vertical">
      <ImageView android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             android:background="@drawable/tata2"
             />
       <TextView android:layout_width="wrap_content"
         android:layout_height="wrap_content"
            android:textColor="#000"
             android:id="@+id/share"
               android:textSize="12sp"
                  android:gravity="center"
         android:text="分享"/>
     </LinearLayout>
      <LinearLayout android:layout_width="0dp"
         android:layout_weight="1"
         android:gravity="center"
          android:clickable="true"
           android:id="@+id/ShopLayout"
         android:layout_height="fill_parent"
         android:orientation="vertical">
        <ImageView android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             android:background="@drawable/tata3"
             />
      <TextView android:layout_width="wrap_content"
         android:layout_height="wrap_content"
            android:id="@+id/shop"
             android:textColor="#000"
             android:gravity="center"
               android:textSize="12sp"
         android:text="商城"/>
        </LinearLayout>
      <LinearLayout android:layout_width="0dp"
         android:layout_weight="1"
         android:gravity="center"
          android:clickable="true"
           android:id="@+id/PersonLayout"
         android:layout_height="fill_parent"
         android:orientation="vertical">
       <ImageView android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             android:background="@drawable/tata4"
             />
      <TextView android:layout_width="wrap_content"
         android:layout_height="wrap_content"
              android:id="@+id/person"
              android:textColor="#000"
              android:textSize="12sp"
                 android:gravity="center"
         android:text="我的踏踏"/>
        </LinearLayout>
     </LinearLayout>
</LinearLayout>